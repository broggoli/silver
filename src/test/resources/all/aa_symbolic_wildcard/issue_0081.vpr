field f: Int

method test01(S: Seq[Ref])
  requires forall i: Int :: i in [0..|S|)  ==> acc(S[i].f, sWildcard)
  ensures  forall i: Int :: i in [0..|S|)  ==> acc(S[i].f, sWildcard)
{
  if (|S| > 1) {
    exhale acc(S[0].f, sWildcard)
  }

  exhale forall i1: Int :: i1 in [0..|S|-2)  ==> acc(S[i1].f, sWildcard)
  exhale forall i2: Int :: i2 in [0..|S|)  ==> acc(S[i2].f, sWildcard)
}
